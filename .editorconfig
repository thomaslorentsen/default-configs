# http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.ini]
insert_final_newline = true
indent_size = 2
trim_trailing_whitespace = true

[*.{yml,yaml}]
insert_final_newline = false
indent_size = 2
trim_trailing_whitespace = true

[*.md]
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 1

[*.php]
indent_size = 4
insert_final_newline = true
